<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:id="@+id/rootView"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="158dp"
        android:text="@string/hello_from_milind"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.353" />

    <Button
        android:id="@+id/changeTextColor"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/change_text_color"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="431dp" />

    <Button
        android:id="@+id/changeViewcolor"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/changeTextColor"
        android:layout_centerHorizontal="true"
        android:text="@string/change_view_color"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="364dp" />

    <Button
        android:id="@+id/changeTextString"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/changeViewcolor"
        android:layout_centerHorizontal="true"
        android:text="@string/change_text_string"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="295dp" />

</RelativeLayout>